{
  "name": "todo-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:codegen": "kysely-codegen --dialect postgres --out-file src/server/db/types.ts && prettier --write src/server/db/types.ts",
    "db:up": "kysely migrate:up",
    "db:down": "kysely migrate:down",
    "db:latest": "kysely migrate:latest",
    "db:url": "grep DATABASE_URL .env | cut -d= -f2",
    "db:schema": "mkdir -p docs && pg_dump --schema-only --no-tablespaces --no-comments --no-owner --no-privileges --schema public $(pnpm -s db:url) | grep -v '^\\\\restrict' | grep -v '^\\\\unrestrict' | pnpm sql-formatter --language postgresql > docs/schema.sql",
    "sync-config": "tsx scripts/sync-config.ts",
    "seed-test-data": "tsx scripts/seed-test-data.ts",
    "test": "TZ=UTC TEST=1 vitest",
    "test:watch": "TZ=UTC TEST=1 vitest --watch",
    "types": "tsc --noEmit --skipLibCheck",
    "types:watch": "tsc --noEmit --watch --skipLibCheck"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.3",
    "@trpc/client": "^11.6.0",
    "@trpc/next": "^11.6.0",
    "@trpc/server": "^11.6.0",
    "@trpc/tanstack-react-query": "^11.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "husky": "^9.1.7",
    "js-cookie": "^3.0.5",
    "js-yaml": "^4.1.0",
    "kysely": "^0.28.8",
    "kysely-ctl": "^0.19.0",
    "lucide-react": "^0.545.0",
    "next": "15.5.5",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^10.1.0",
    "@next/eslint-plugin-next": "^15.5.5",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/cookie": "^1.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.37.0",
    "eslint-config-next": "15.5.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "kysely-codegen": "^0.19.0",
    "kysely-pglite": "^0.6.1",
    "kysely-pglite-dialect": "^1.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sql-formatter": "^15.6.10",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "msw",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.18.2"
}
