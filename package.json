{
  "name": "todo-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "oxlint --fix && tsc --noEmit --skipLibCheck",
    "format": "oxfmt .",
    "db:codegen": "kysely-codegen --dialect postgres --out-file src/server/db/types.ts && oxfmt src/server/db/types.ts",
    "db:up": "kysely migrate:up",
    "db:down": "kysely migrate:down",
    "db:latest": "kysely migrate:latest",
    "db:url": "grep DATABASE_URL .env | cut -d= -f2",
    "db:schema": "mkdir -p docs && pg_dump --schema-only --no-tablespaces --no-comments --no-owner --no-privileges --schema public $(pnpm -s db:url) | grep -v '^\\\\restrict' | grep -v '^\\\\unrestrict' | pnpm sql-formatter --language postgresql > docs/schema.sql",
    "db:sync": "tsx scripts/db-sync.ts",
    "db:sync:watch": "pnpm db:sync && fswatch -o config.yml | xargs -n1 -I{} pnpm db:sync",
    "db:seed": "tsx scripts/db-seed.ts",
    "db:clear": "tsx scripts/db-clear.ts",
    "config:check": "tsx scripts/config-check.ts",
    "test": "TZ=UTC TEST=1 vitest",
    "test:watch": "TZ=UTC TEST=1 vitest --watch",
    "types": "tsc --noEmit --skipLibCheck",
    "types:watch": "tsc --noEmit --watch --skipLibCheck",
    "everything": "pnpm lint && pnpm format && pnpm test"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.20",
    "@trpc/client": "^11.9.0",
    "@trpc/next": "^11.9.0",
    "@trpc/server": "^11.9.0",
    "@trpc/tanstack-react-query": "^11.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "js-cookie": "^3.0.5",
    "js-yaml": "^4.1.1",
    "kysely": "^0.28.10",
    "kysely-ctl": "^0.20.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.6",
    "pg": "^8.17.2",
    "pluralize": "^8.0.0",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "use-debounce": "^10.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@faker-js/faker": "^10.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cookie": "^1.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "kysely-codegen": "^0.19.0",
    "kysely-pglite": "^0.6.1",
    "kysely-pglite-dialect": "^1.2.0",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "sql-formatter": "^15.7.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "msw",
      "unrs-resolver"
    ]
  }
}
